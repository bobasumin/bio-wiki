<div class="row">
  <div class="large-12 columns">
    <h1>New Wiki</h1><br />
  <%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :body %>
  <%= f.text_area :body %>

  <% if current_user.role == 'premium' %>
    <%= f.label :public do %>
      <%= f.check_box :public %> Public
    <% end %>
  <% end %><br />

  <%= f.submit "Save", class: "button radius round" %>
  <% end %>
  </div>
</div>