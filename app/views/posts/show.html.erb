<div class="row">
  <div class="panel small-12 columns">
    <h2><strong><%= @user.name %></strong></h2>
    <hr />
      <div class="small-8 columns">
        <h3><strong>Summary</strong></h3>
        <p><%= @post.summary %></p><br />
        <h3><strong>Early Life</strong></h3>
        <p><%= @post.earlylife %></p><br />
        <h3><strong>Career</strong></h3>
        <p><%= @post.career %></p><br />
        <h3><strong>Personal Life</strong></h3>
        <p><%= @post.personallife %></p><br />
      </div>

    <div class="small-4 columns">
      <div class="card">
        <p>hello</p>
        <p><strong>Date of Birth:</strong> </p>
      </div>
    </div>
    
    <div class="small-12 columns"> 
     <% if can? :edit, @post %>
       <%= link_to "Edit", edit_post_path(@post), class: 'button radius round' %>
     <% end %><br /><br />

     <% if (@post.user.email == current_user.email && current_user.role == 'premium') %>
       <h3>Add Collaborators to the <%= @post.title %> Wiki</h3><br />
       <%= form_for @post do |f| %>
       <table>
         <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Give Access</th>
        </tr>
            <% @users.each do |u| unless (u.email == @post.user.email || u.role == 'free' || @post.users.include?(u)) %>
        <tr>
          <td><%= u.name %></td>
          <td><%= u.email %></td>
          <td><%= check_box_tag :user_ids, u.id, @post.users.include?(u), name: 'post[user_ids][]'%></td>
        </tr>
            <% end %>
            <% end %>
      </table>
      <%= f.submit "Share Wiki", class: 'button radius round'%>
      <% end %>
    <% end %>

    <% if can? :destroy, @post %>
    <%= link_to "Delete Post", @post, method: :delete, class: 'button alert radius round', confirm: 'Are you sure you want to delete this Wiki?' %>
    <% end %>
  </div>
  </div>
</div>