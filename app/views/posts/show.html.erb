<div class="row">
  <div class="large-12 columns">
    <h1><%= @post.title %></h1>
    <p><%= markdown @post.body %></p><br />
  </div>
</div>
<div class="row">
  <div class="large-6 columns">
    <%= link_to "Back to Wikis", posts_path, class: 'button radius round' %><br />
  </div>
  <div class="large-6 columns">
    <% if can? :edit, @post %>
      <%= link_to "Edit", edit_post_path(@post), class: 'button radius round' %>
    <% end %><br /><br />
  </div>
  <div class="large-12 columns">
    <% if (@post.user.email == current_user.email && current_user.role == 'premium') %>
      <h3>Add Collaborators to the <%= @post.title %> Wiki</h3><br />
      <%= form_for @post do |f| %>
      <table>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Give Access</th>
        </tr>
            <% @users.each do |u| unless (u.email == @post.user.email || u.role == 'free' || @post.users.include?(u)) %>
        <tr>
          <td><%= u.name %></td>
          <td><%= u.email %></td>
          <td><%= check_box_tag :user_ids, u.id, @post.users.include?(u), name: 'post[user_ids][]'%></td>
        </tr>
            <% end %>
            <% end %>
      </table>
      <%= f.submit "Share Wiki", class: 'button radius round'%>
      <% end %>
    <% end %>

    <% if can? :destroy, @post %>
    <%= link_to "Delete Post", @post, method: :delete, class: 'button alert radius round', confirm: 'Are you sure you want to delete this Wiki?' %>
    <% end %>
  </div>
</div>
